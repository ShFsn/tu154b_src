<!-- Text OSG -->
  <animation>
    <type>select</type>
    <object-name>textsvb</object-name>
    <condition>
     <or>
      <property>sim/panel-hotspots</property>
      <property>sim/panel-hotspots_comm</property>
     </or>
    </condition>
  </animation>

  <text>
    <name>textsvb</name>
    <type type="string">literal</type>
    <text type="string">NEON SVB-5 Radio Trans-mitter</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.04</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>xz-plane</axis-alignment>
    <max-height>0.1</max-height>
    <max-width>0.1</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.000</x-m>
      <y-m>-0.135</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
 <animation>
  <type>material</type>
   <object-name>textsvb</object-name>
    <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
   </emission>
 </animation>

</PropertyList>
