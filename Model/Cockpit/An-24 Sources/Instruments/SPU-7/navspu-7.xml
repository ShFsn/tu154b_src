<?xml version="1.0"?>

<!-- Navigator's SPU-7, crew/radio communication subscriber unit -->

<PropertyList>
  <path>spu-7.ac</path>

 <animation>
   <type>material</type>
   <object-name>light_plate</object-name>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>0.7</blue>
     <factor-prop>controls/lighting/nav_panel_instr_red</factor-prop>
   </emission>
 </animation>

<!-- Emergency/circular call (make all subscribers listen at full volume regardless of subscriber settings)-->
<animation>
  <type>pick</type>
  <object-name>press_me</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/SPU-7/emerg-call_viewnr103", 1.0, 0.1 );
      </script>
    </binding>
   <mod-up>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/SPU-7/emerg-call_viewnr103", 0.0, 0.1 );
      </script>
    </binding>
   </mod-up>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>spu_emerg_nav</tooltip-id>
      <label>Emerg/Circular
        Call</label>
    </binding>
   </hovered>
</animation>

<animation>
  <type>translate</type>
  <object-name>press_me</object-name>
  <property>an24/SPU-7/emerg-call_viewnr103</property>
  <factor>0.0016</factor>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<!-- Source selector -->
 <animation>
   <type>knob</type>
   <object-name>source_select</object-name>
   <property>an24/SPU-7/source_viewnr103</property>
   <factor>32</factor>
   <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0027</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/SPU-7/source_viewnr103</property>
      <factor>-1</factor>
      <min>0</min>
      <max>5</max>                
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>spu-source_nav</tooltip-id>
      <label>Source: %s</label>
      <property>an24/SPU-7/source_viewnr103</property>
      <mapping>nasal</mapping>
      <script>
        var spusourcenav = ['R-802 Comm 1', 'US-8K HF/AM', 'R-836 HF/AM', 'R-802 Comm 2', 'ARK/Kurs-MP I', 'ARK/Kurs-MP II'];
        return spusourcenav[arg[0]];
      </script>
    </binding>
   </hovered>
 </animation>

<!-- "General" (left) volume knob (volume of SELECTED by "SPU - Radio" switch)-->
 <animation>
   <type>knob</type>
   <object-name>vol_general</object-name>
   <property>an24/SPU-7/general_viewnr103</property>
   <factor>-300</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0327</y-m>
   <z-m>0.0436</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/SPU-7/general_viewnr103</property>
      <factor>-0.05</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>General Volume %3d%%</label>
         <measure-text>General Volume 100p</measure-text>
         <tooltip-id>spu-gen-vol_nav</tooltip-id>
         <mapping>percent</mapping>
         <property>an24/SPU-7/general_viewnr103</property>
       </binding>
     </hovered>
 </animation>


<!-- "Listen" (right) volume knob (volume of NOT selected by "SPU - Radio" switch) -->
 <animation>
   <type>knob</type>
   <object-name>vol_listen</object-name>
   <property>an24/SPU-7/listen_viewnr103</property>
   <factor>-300</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>0.0327</y-m>
   <z-m>0.0436</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/SPU-7/listen_viewnr103</property>
      <factor>-0.05</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>Listen Volume %3d%%</label>
         <measure-text>Listen Volume 100p</measure-text>
         <tooltip-id>spu-list-vol_nav</tooltip-id>
         <mapping>percent</mapping>
         <property>an24/SPU-7/listen_viewnr103</property>
       </binding>
     </hovered>
 </animation>

<!-- SPU - Radio switch -->
 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        setprop("an24/SPU-7/spu_radio_viewnr103", 1.0 );
	interpolate("an24/SPU-7/sw_spu_radio_viewnr103", 1.0, 0.1 );
      </script>
    </binding>
  </action>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        setprop("an24/SPU-7/spu_radio_viewnr103", 0.0 );
	interpolate("an24/SPU-7/sw_spu_radio_viewnr103", 0.0, 0.1 );
      </script>
    </binding>
  </action>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>spu-lever</object-name>
   <property>an24/SPU-7/spu_radio_viewnr103</property>
  <interpolation>
    <entry><ind>1.0</ind>	<dep>30.0</dep></entry>
    <entry><ind>0.0</ind>	<dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.02162</z-m>
  </center>
 </animation>

<!-- TEXT OSG -->
  <animation>
    <type>select</type>
    <object-name>textspu7nav</object-name>
    <condition>
     <or>
      <property>sim/panel-hotspots</property>
      <property>sim/panel-hotspots_comm</property>
     </or>
    </condition>
  </animation>

  <text>
    <name>textspu7nav</name>
    <type type="string">literal</type>
    <text type="string">SPU-7 Comm Device</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.02</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.08</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.018</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textspu7nav</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
