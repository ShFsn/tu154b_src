<?xml version="1.0"?>

<!-- PG4-2 selector for fuel indicator 2PPT1-4 (Item 685) -->

<PropertyList>

 <path>pg4-2.ac</path>

 <animation>
   <type>material</type>
   <object-name>pg4-base</object-name>
   <emission>
     <red>1.0</red>
     <green>0.4</green>
     <blue>0.4</blue>
     <factor-prop>controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

 <animation>
   <type>material</type>
   <object-name>selector</object-name>
   <emission>
     <red>0.2</red>
     <green>0.1</green>
     <blue>0.1</blue>
     <factor-prop>controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

<!-- Knob -->
  <animation>
   <type>knob</type>
   <object-name>selector</object-name>
   <property>an24/PG4and2PPT1/selected-ind</property>
    <factor>1.0</factor>
    <center>
     <x-m>0.0</x-m>
     <y-m>0.0</y-m>
     <z-m>0.0</z-m>
    </center>
    <axis>
     <x>-1.0</x>
     <y>0.0</y>
     <z>0.0</z>
    </axis>
     <action>
      <binding>
       <command>property-cycle</command>
       <property>an24/PG4and2PPT1/selected-ind</property>
       <value>50</value>
       <value>18</value>
       <value>-18</value>
       <value>-50</value>
        <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>pg4</tooltip-id>
      <label> Fuel Indicator
Tank Selection</label>
    </binding>
   </hovered>
  </animation>

<!-- TEXT OSG -->
  <animation>
    <type>select</type>
    <object-name>textpg4</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textpg4</name>
    <type type="string">literal</type>
    <text type="string">PG-4 Fuel Level Indication Selector</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.012</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.05</max-height>
    <max-width>0.05</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.005</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textpg4</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue>1.0</blue>
    </emission>
  </animation>

</PropertyList>
