			stations.textst12.setText(sprintf("%.1f", navaid.frequency/100 ));
			stations.textra12.setText(sprintf("%.i", navaid.range_nm * 1.85 ));
		}
		else {
			stations.textid12.setText("");
			stations.textst12.setText("");
			stations.textra12.setText("");
		}
	}
