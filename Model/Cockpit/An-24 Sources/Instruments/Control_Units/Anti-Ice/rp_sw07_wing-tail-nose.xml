<?xml version="1.0"?>

<!-- Air bleed from left/right engine for wing and tail nose heating; Item 813 -->
<PropertyList>
 <path>../../../shared/switches/2ppg-15k.ac</path>
 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/wing-tail_bleed", 1.0, 0.1 );
	sound.click("azr", 2.1, 0.8, 0.65);
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>wingtailheaton</tooltip-id>
      <label> Engine Bleed to
Wing-/Tail Edges</label>
    </binding>
   </hovered>
</animation>

<animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/wing-tail_bleed", 0.0, 0.1 );
	sound.click("azr", 2.1, 0.8, 0.65);
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>wingtailheatoff</tooltip-id>
      <label> Engine Bleed to
Wing-/Tail Edges</label>
    </binding>
   </hovered>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/Anti-Ice/wing-tail_bleed</property>
  <interpolation>
    <entry><ind>0.0</ind>	<dep>-20.0</dep></entry>
    <entry><ind>1.0</ind>	<dep>20.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
