<?xml version="1.0"?>

<!-- Switch 2580 for heating (hot air supply to) turbogenerator TG-16 -->

<PropertyList>
 <path>../../shared/switches/vg-15k.ac</path>

<animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <condition>
     <equals>
      <property>an24/AZS/sw0614</property>
      <value>1.0</value>
     </equals>
     <greater-than>
      <property>an24/Electrics/TsRUr_V</property>
      <value>24.0</value>
     </greater-than>
    </condition>
    <command>nasal</command>
     <script>
	setprop("an24/Air-Cond/TG-16heating", 1 );
     </script>
    </binding>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Air-Cond/sw_TG-16heating", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>tg16heaton</tooltip-id>
      <label>TG-16 Heating ON</label>
    </binding>
   </hovered>
</animation>

<animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	setprop("an24/Air-Cond/TG-16heating", 0 );
	interpolate("an24/Air-Cond/sw_TG-16heating", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>tg16heatoff</tooltip-id>
      <label>TG-16 Heating OFF</label>
    </binding>
   </hovered>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/Air-Cond/sw_TG-16heating</property>
  <interpolation>
    <entry><ind>1.0</ind>	<dep>30.0</dep></entry>
    <entry><ind>0.0</ind>	<dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
