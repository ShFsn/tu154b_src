<?xml version="1.0"?>

<!-- Anti-Ice control switch, l/r system (PNG-15k); Item 830 -->
<PropertyList>
 <path>../../../shared/switches/png-15k.ac</path>

 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_controlL-R", 1.0, 0.1 );
	setprop("an24/Anti-Ice/controlL-R", 1 );
	sound.click("azr", 2.1, 0.81, 0.69);
      </script>
    </binding>
    <mod-up>
      <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_controlL-R", 0.0, 0.1 );
	setprop("an24/Anti-Ice/controlL-R", 0 );
	sound.click("azr", 2.1, 0.81, 0.69);
      </script>
    </binding>
    </mod-up>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>ice-conrolR</tooltip-id>
      <label>SO-4 Icing Signalisation
 CHECK right System</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_controlL-R", -1.0, 0.1 );
	setprop("an24/Anti-Ice/controlL-R", -1 );
	sound.click("azr", 2.1, 0.81, 0.69);
      </script>
    </binding>
    <mod-up>
      <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_controlL-R", 0.0, 0.1 );
	setprop("an24/Anti-Ice/controlL-R", 0 );
	sound.click("azr", 2.1, 0.81, 0.69);
      </script>
    </binding>
    </mod-up>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>ice-conrolL</tooltip-id>
      <label>SO-4 Icing Signalisation
 CHECK left System</label>
    </binding>
   </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/Anti-Ice/sw_controlL-R</property>
  <interpolation>
    <entry><ind>-1.0</ind>	<dep>30.0</dep></entry>
    <entry><ind>1.0</ind>	<dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>1.0</y>
    <z>0.0</z>
  </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0</z-m>
   </center>
 </animation>

</PropertyList>
