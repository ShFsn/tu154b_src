<?xml version="1.0"?>

<!-- Inlet guide vanes anti-ice heat valve OPEN/CLOSE; Item 3104 -->
<PropertyList>
 <path>../../../shared/switches/2ppng-15k.ac</path>

 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_vna-heat-r", 1.0, 0.1 );
	sound.click("azr", 2.1, 0.72, 0.72);
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>vnaopenr</tooltip-id>
      <label>OPEN VNA Inlet
   Heat Valve</label>
    </binding>
   </hovered>
</animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_middle</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_vna-heat-r", 0.0, 0.1 );
	sound.click("azr", 2.1, 0.72, 0.72);
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>vnastopr</tooltip-id>
      <label>STOP VNA Inlet
   Heat Valve</label>
    </binding>
   </hovered>
</animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_vna-heat-r", -1.0, 0.1 );
	sound.click("azr", 2.1, 0.72, 0.72);
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>vnacloser</tooltip-id>
      <label>CLOSE VNA Inlet
   Heat Valve</label>
    </binding>
   </hovered>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/Anti-Ice/sw_vna-heat-r</property>
  <interpolation>
    <entry><ind>-1.0</ind>	<dep>-20.0</dep></entry>
    <entry><ind>0.0</ind>	<dep>0.0</dep></entry>
    <entry><ind>1.0</ind>	<dep>20.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>
 
</PropertyList>
