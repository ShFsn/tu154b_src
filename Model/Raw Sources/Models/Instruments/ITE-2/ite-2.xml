<?xml version="1.0"?>

<!-- ITE-2, turbine rpm -->
<PropertyList>
 <path>ite-2.ac</path>

 <animation>
  <type>material</type>
  <object-name>housing</object-name>
  <object-name>needle_1</object-name>
  <object-name>needle_2</object-name>
   <emission>
     <red>1.0</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <factor-prop>controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>needle_1</object-name>
  <property>engines/engine[0]/rpm</property><!--should be engine rpm, this is thruster rpm (due to jsbsim internals)-->
  <interpolation>
   <entry><ind>	  0.0</ind><dep> 46.9</dep></entry>
   <entry><ind>1245.0</ind><dep>360.0</dep></entry>
   <entry><ind>1370.0</ind><dep>391.3</dep></entry>
  </interpolation>
  <axis>
   <x>-1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>needle_2</object-name>
  <property>engines/engine[1]/rpm</property>
  <interpolation>
   <entry><ind>	  0.0</ind><dep> 46.9</dep></entry>
   <entry><ind>1245.0</ind><dep>360.0</dep></entry>
   <entry><ind>1370.0</ind><dep>391.3</dep></entry>
  </interpolation>
  <axis>
   <x>-1.0</x>
   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>

<!-- Text OSG -->
  <animation>
    <type>select</type>
    <object-name>textite</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textite</name>
    <type type="string">literal</type>
    <text type="string">ITE-2 Turbine RPM</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.06</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.005</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textite</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue> 1.0</blue>
    </emission>
  </animation>

</PropertyList>
