<?xml version="1.0"?>

<!-- Roll-mode GIK(1)/GPK(0)/ZK(-1) -->

<PropertyList>
 <path>../../shared/switches/switch02.ac</path>
 
 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/AP-28l1/sw_roll-mode", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>rollmodegik</tooltip-id>
      <label>GIK Heading</label>
    </binding>
   </hovered>
</animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_middle</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/AP-28l1/sw_roll-mode", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>rollmodegpk</tooltip-id>
      <label>GPK Heading</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("an24/AP-28l1/sw_roll-mode", -1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>rollmodeknob</tooltip-id>
      <label>Roll by ZK-2</label>
    </binding>
   </hovered>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/AP-28l1/sw_roll-mode</property>
  <interpolation>
    <entry><ind>1.0</ind>	<dep>25.0</dep></entry>
    <entry><ind>-1.0</ind>	<dep>-25.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
