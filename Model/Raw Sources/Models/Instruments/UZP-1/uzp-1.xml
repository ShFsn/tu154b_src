<?xml version="1.0"?>

<!-- Flap Indicator -->

<PropertyList>
 <path>uzp-1.ac</path>

 <animation>
   <type>material</type>
   <object-name>housing</object-name>
   <object-name>uzp_needle</object-name>
   <emission>
     <red>1.0</red>
     <green>0.7</green>
     <blue>0.7</blue>
     <factor-prop>controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

<animation>
  <type>rotate</type>
  <object-name>uzp_needle</object-name>
  <property>fdm/jsbsim/fcs/flap-pos-deg</property>
   <factor>4.0</factor>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!-- Text OSG -->
  <animation>
    <type>select</type>
    <object-name>textuzp</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>textuzp</name>
    <type type="string">literal</type>
    <text type="string">UZP-1 Flaps Indicator</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.014</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.06</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>0.005</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
    </offsets>
  </text>
  <animation>
    <type>material</type>
    <object-name>textuzp</object-name>
    <emission>
      <red>1.0</red>
      <green>1.0</green>
      <blue> 1.0</blue>
    </emission>
  </animation>

</PropertyList>
