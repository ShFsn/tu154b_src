<?xml version="1.0"?>

<!-- TV-45, crew cabin air temp (now OAT) -->
<PropertyList>
 <path>tv-45.ac</path>

 <animation>
   <type>material</type>
   <object-name>housing</object-name>
   <object-name>needle_crew_cabin_temp</object-name>
   <emission>
     <red>1.0</red>
     <green>0.3</green>
     <blue>0.3</blue>
     <factor-prop>controls/lighting/panel-m_red</factor-prop>
   </emission>
 </animation>

