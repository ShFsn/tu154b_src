<PropertyList>

 <path>pps.ac</path>

 <animation>
  <type>material</type>
  <object-name>front_up</object-name>
   <condition>
    <and>
     <equals>
      <property>an24/PPS/gear-light-power</property>
      <value>1</value>
     </equals>
     <or>
     <equals>
      <property>gear/gear[0]/position-norm</property>
      <value>0.0</value>
     </equals>
     <equals>
      <property>an24/PPS/light-test-knob</property>
      <value>1.0</value>
     </equals>
     </or>
    </and>
   </condition>
   <emission>
     <red>1.0</red>
     <green>1.0</green>
     <blue>1.0</blue>
     <factor-prop>an24/PPS/lighting</factor-prop>
   </emission>
 </animation>

