 <animation>
   <type>knob</type>
   <object-name>light-knob</object-name>
   <property>an24/PPS/lighting-save</property>
   <factor>-100</factor>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>an24/PPS/lighting</property>
      <factor>-0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
     <binding>
      <command>property-adjust</command>
      <property>an24/PPS/lighting-save</property>
      <factor>-0.1</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
 </animation>

