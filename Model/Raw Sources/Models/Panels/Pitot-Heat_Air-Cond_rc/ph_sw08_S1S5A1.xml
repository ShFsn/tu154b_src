<?xml version="1.0"?>

<!-- Switch for heating of pitots S1, S5 and A1 (Pilot's UVO-15 altimeter, KUS-730 ASI, VAR-30 variometer; alt correction KV-11 of autopilot); Item 1666 -->

<PropertyList>
 <path>../../shared/switches/ppng-15k.ac</path>

<animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
        <condition>
         <equals>
         <property>an24/AZS/sw0411</property>
         <value>1.0</value>
         </equals>
        </condition>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/pitot_S1S5A1", 1.0, 0.1 );
      </script>
    </binding>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_pitot_S1S5A1", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>pitotheat1on</tooltip-id>
      <label>Pitot Heating ON
-Pilot's Instr.
-AP-ALT Control</label>
    </binding>
   </hovered>
</animation>

<animation>
  <type>pick</type>
  <object-name>clickspot_middle</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/pitot_S1S5A1", 0.0, 0.1 );
	interpolate("an24/Anti-Ice/sw_pitot_S1S5A1", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>pitotheat1off</tooltip-id>
      <label>Pitot Heating OFF
-Pilot's Instr.
-AP-ALT Control</label>
    </binding>
   </hovered>
</animation>

<animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
        <condition>
         <equals>
         <property>an24/AZS/sw0411</property>
         <value>1.0</value>
         </equals>
        </condition>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/pitot_S1S5A1", -1.0, 0.1, -1.0, 2.0, 0.0, 0.1 );
      </script>
    </binding>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_pitot_S1S5A1", -1.0, 0.1 );
      </script>
    </binding>
   <mod-up>
    <binding>
      <command>nasal</command>
      <script>
	interpolate("an24/Anti-Ice/sw_pitot_S1S5A1", 0.0, 0.1 );
      </script>
    </binding>
   </mod-up>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>pitotheat1ctrl</tooltip-id>
      <label>Control</label>
    </binding>
   </hovered>
</animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>an24/Anti-Ice/sw_pitot_S1S5A1</property>
  <interpolation>
    <entry><ind>1.0</ind>	<dep>30.0</dep></entry>
    <entry><ind>-1.0</ind>	<dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
