<PropertyList>
 <path>lightcone-landing.ac</path>

<!--Spot lights-->

<animation>
   <type>light</type>
   <light-type>spot</light-type>
   <object-name>lightcone-landing</object-name>
   <nopreview/>
   <position>
     <x>0.0</x>
     <y>0.0</y>
     <z>0.0</z>
   </position>
   <direction>
     <x>0.0</x>
     <y>0.0</y>
     <z>-1.0</z>
   </direction>
   <ambient>
     <r>0.03</r>
     <g>0.03</g>
     <b>0.03</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.6</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.7</b>
     <a>1.0</a>
   </specular>
    <attenuation>
     <c>0.2</c><!--0.25-->
     <l>0.00005</l>
     <q>0.000005</q>
    </attenuation>
   <exponent>200.0</exponent>
   <cutoff>20</cutoff>
   <near-m>50</near-m>
   <far-m>2500</far-m>
 </animation>

  <animation>
	  <type>select</type>
	  <condition>
		  <property>tu154/light/headlight-selector</property>
		  <property>tu154/systems/electrical/buses/DC27-bus-L/volts</property>
	  </condition>
  </animation>


 
</PropertyList> 